<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.sample.Controller">
    <stylesheets><URL value="@/client/css/Styles.css" /> </stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" prefHeight="35.0" prefWidth="400.0" promptText="Введите сообщение.." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn" onAction="#sendMsg" prefHeight="35.0" prefWidth="150.0" text="Send" textOverrun="LEADING_ELLIPSIS" />
    </HBox>
</VBox>
